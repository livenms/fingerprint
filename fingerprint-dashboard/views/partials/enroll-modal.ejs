<div class="fixed inset-0 bg-black/70 backdrop-blur-sm flex items-center justify-center z-50 p-4">
  <div class="bg-slate-800 rounded-xl p-6 max-w-md w-full border border-purple-500/20">
    <h3 class="text-2xl font-bold text-white mb-6">Enroll New User</h3>
    <form method="POST" action="/users/enroll">
      <div class="space-y-4">
        <div>
          <label class="block text-purple-300 text-sm mb-2">User ID (1-20)</label>
          <input
            type="number"
            name="id"
            min="1"
            max="20"
            required
            class="w-full px-4 py-2 bg-slate-700 text-white rounded-lg border border-purple-500/20 focus:border-purple-500 focus:outline-none"
            placeholder="Enter ID (1-20)"
          />
        </div>
        <div>
          <label class="block text-purple-300 text-sm mb-2">Full Name</label>
          <input
            type="text"
            name="name"
            required
            class="w-full px-4 py-2 bg-slate-700 text-white rounded-lg border border-purple-500/20 focus:border-purple-500 focus:outline-none"
            placeholder="John Doe"
          />
        </div>
        <div>
          <label class="block text-purple-300 text-sm mb-2">Phone Number</label>
          <input
            type="tel"
            name="phone"
            required
            class="w-full px-4 py-2 bg-slate-700 text-white rounded-lg border border-purple-500/20 focus:border-purple-500 focus:outline-none"
            placeholder="+250780146487"
          />
        </div>
        <div>
          <label class="block text-purple-300 text-sm mb-2">Card ID</label>
          <input
            type="text"
            name="cardId"
            required
            class="w-full px-4 py-2 bg-slate-700 text-white rounded-lg border border-purple-500/20 focus:border-purple-500 focus:outline-none"
            placeholder="CARD001"
          />
        </div>
      </div>
      <div class="flex space-x-3 mt-6">
        <a
          href="/?tab=users"
          class="flex-1 px-4 py-2 bg-slate-700 hover:bg-slate-600 text-white rounded-lg transition-colors text-center"
        >
          Cancel
        </a>
        <button
          type="submit"
          class="flex-1 px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition-colors shadow-lg shadow-purple-500/50"
        >
          Start Enrollment
        </button>
      </div>
    </form>
  </div>
</div>